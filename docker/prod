FROM python:2.7-slim

EXPOSE 8000
WORKDIR /app
CMD ["./bin/run-prod.sh"]

RUN adduser --uid 431 --disabled-password --disabled-login --gecos 'webdev' --no-create-home webdev
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential libxml2-dev libxslt1-dev libffi-dev zlib1g-dev python-dev \
    python-pip node-less locales libpq-dev postgresql-client && \
    rm -rf /var/lib/apt/lists/*

RUN dpkg-reconfigure locales && locale-gen C.UTF-8 && \
    /usr/sbin/update-locale LANG=C.UTF-8
RUN echo 'en_US.UTF-8 UTF-8' >> /etc/locale.gen && locale-gen
ENV LC_ALL C.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8

COPY requirements /app/requirements/
RUN pip install --no-cache-dir --require-hashes --no-deps -r requirements/prod.txt
COPY . /app

RUN chown webdev.webdev -R .
USER webdev
RUN bin/bootstrap.sh
